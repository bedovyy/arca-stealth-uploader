{
  "manifest_version": 3,
  "name": "Arca Stealth Info",
  "description": "Add stealth info during image upload",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "lib/exif-reader.js",
        "lib/pako.min.js",
        "stealth-pnginfo.js",
        "image-metadata.js",
        "webui-metadata-to-json.js",
        "modal.js",
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/exif-reader.js",
        "lib/pako.min.js",
        "stealth-pnginfo.js",
        "image-metadata.js",
        "injected-script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}